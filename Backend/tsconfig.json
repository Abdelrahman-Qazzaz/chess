{
  "compilerOptions": {
    "target": "ES6", // Set the JavaScript version to compile to
    "module": "commonjs", // Set module system
    "outDir": "./dist", // Directory for compiled files
    "rootDir": "./", // Root directory of TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true // For compatibility with CommonJS modules
  },
  "include": ["**/*.ts"], // Include all files in the 'src' directory
  "exclude": ["node_modules"] // Exclude 'node_modules' directory
}
